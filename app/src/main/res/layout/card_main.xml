<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
									xmlns:card_view="http://schemas.android.com/apk/res-auto"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_marginBottom="2dp"
									android:layout_marginLeft="10dp"
									android:layout_marginRight="10dp"
									android:layout_marginTop="2dp"
									card_view:cardBackgroundColor="@android:color/white"
									card_view:cardCornerRadius="4dp"
									card_view:cardElevation="4dp"
									card_view:cardPreventCornerOverlap="true"
									card_view:cardUseCompatPadding="true">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/bg_card_main">

		<RelativeLayout
			android:id="@+id/rlPrimaryTitle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="16dp"
			android:paddingLeft="16dp"
			android:paddingRight="16dp"
			android:paddingTop="24dp">

			<android.support.v7.widget.AppCompatTextView
				android:id="@+id/tvPrimaryText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:text="title"
				android:textColor="@color/darkTextPrimary"
				android:textSize="24dp"/>

			<android.support.v7.widget.AppCompatTextView
				android:id="@+id/tvSubText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/tvPrimaryText"
				android:singleLine="false"
				android:text="description"
				android:textColor="@color/darkTextSecondary"
				android:textSize="14dp"/>
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/rlSupportingText"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/rlPrimaryTitle"
			android:paddingTop="0dp"
			android:paddingBottom="16dp"
			android:paddingRight="16dp"
			android:paddingLeft="16dp">
			<android.support.v7.widget.AppCompatTextView
				android:id="@+id/tvSupportingText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textColor="@color/darkTextPrimary"/>
		</RelativeLayout>
		<View
			android:id="@+id/vDivider"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_below="@id/rlSupportingText"
			android:background="@color/darkDividers"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/vDivider"
			android:padding="8dp">
			<android.support.v7.widget.AppCompatButton
				android:id="@+id/btnShowDemo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Show Demo"
				android:textSize="14sp"
				android:textColor="@color/teal500"/>
			<android.support.v7.widget.AppCompatButton
				android:id="@+id/btnOpenGitHub"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="GitHub"
				android:textSize="14sp"
				android:textColor="@color/teal500"/>
		</LinearLayout>
	</RelativeLayout>
</android.support.v7.widget.CardView>